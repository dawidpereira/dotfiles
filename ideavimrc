nnoremap <leader>ut :action ViewToolBar<CR>
nnoremap <leader>us :action ViewStatusBar<CR>
nnoremap <leader>un :action EditorToggleShowLineNumbers<CR>
nnoremap <leader>uw :action EditorToggleUseSoftWraps<CR>
