[user]
    # Set your name and email in ~/.gitconfig.local
    # name = Your Name
    # email = your.email@example.com

[core]
    editor = nvim
    excludesfile = ~/.gitignore_global
    pager = less -F -X

[init]
    defaultBranch = main

[commit]
    template = ~/.config/gitmessage
    verbose = true

[push]
    default = simple
    autoSetupRemote = true

[pull]
    rebase = false

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default

[alias]
    # Short aliases (in addition to bash aliases)
    st = status -sb
    ci = commit
    co = checkout
    br = branch
    df = diff
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    last = log -1 HEAD
    unstage = reset HEAD --
    amend = commit --amend --no-edit
    undo = reset --soft HEAD~1

[color]
    ui = true

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = green
    changed = yellow
    untracked = red

# Include local config if it exists
[include]
    path = ~/.gitconfig.local